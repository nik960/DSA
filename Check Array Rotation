public class Solution {

    public static int arrayRotateCheck(int[] arr){
    	//Your code goes here
         int min_index=-1;
        if(arr.length<=1){
            return 0;
        }
        else{
        int min=Integer.MAX_VALUE;
       
        for(int i=0;i<arr.length;i++)
        {
            if(arr[i]<min)
            {
                min=arr[i];
                min_index=i;
            }
        }
        }
        return min_index;
        
        
        
    }

}
